    border-radius: var(--radius-lg);
    padding: var(--spacing-lg);
    margin: var(--spacing-xl) 0;
    position: relative;
    overflow: hidden;
  }

  .api-update-notice::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    width: 4px;
    height: 100%;
    background: var(--gradient-primary);
  }

  .championship-notice::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    width: 4px;
    height: 100%;
    background: var(--success);
  }

  .notice-content h3 {
    margin: 0 0 var(--spacing-sm);
    color: var(--text-primary);
    font-size: 1.125rem;
    font-weight: 600;
  }

  .api-update-notice .notice-content h3 {
    background: var(--gradient-primary);
    -webkit-background-clip: text;
    background-clip: text;
    -webkit-text-fill-color: transparent;
  }

  .notice-content p {
    margin-bottom: var(--spacing-sm);
    color: var(--text-secondary);
    line-height: 1.6;
  }

  .notice-content p:last-child {
    margin-bottom: 0;
  }

  .notice-content a {
    color: var(--primary);
    text-decoration: none;
    font-weight: 500;
    border-bottom: 1px solid transparent;
    transition: all 0.2s ease;
  }

  .notice-content a:hover {
    border-bottom-color: var(--primary);
  }

  /* Feature Cards - Modern Grid Layout */
  .features {
    display: grid;
    gap: var(--spacing-lg);
    margin-bottom: var(--spacing-2xl);
    grid-template-columns: 1fr;
  }

  @media (min-width: 768px) {
    .features {
      grid-template-columns: repeat(2, 1fr);
    }
  }

  @media (min-width: 1024px) {
    .features {
      grid-template-columns: repeat(4, 1fr);
    }
  }

  .feature-card {
    background: var(--surface);
    border: 1px solid var(--surface-border);
    border-radius: var(--radius-lg);
    padding: var(--spacing-xl);
    transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
    position: relative;
    overflow: hidden;
    backdrop-filter: blur(10px);
  }

  .feature-card::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background: var(--gradient-glow);
    opacity: 0;
    transition: opacity 0.3s ease;
    z-index: -1;
  }

  .feature-card:hover {
    transform: translateY(-8px);
    border-color: var(--primary);
    box-shadow: var(--shadow-lg);
  }

  .feature-card:hover::before {
    opacity: 1;
  }

  .feature-icon {
    display: inline-flex;
    align-items: center;
    justify-content: center;
    width: 48px;
    height: 48px;
    border-radius: var(--radius-md);
    margin-bottom: var(--spacing-md);
    background: var(--gradient-primary);
    color: white;
    box-shadow: var(--shadow-sm);
  }

  .feature-title {
    font-size: 1.125rem;
    font-weight: 600;
    margin-bottom: var(--spacing-sm);
    color: var(--text-primary);
  }

  .feature-description {
    color: var(--text-secondary);
    font-size: 0.9375rem;
    line-height: 1.6;
  }

  /* Search Section - Modern Form Design */
  .search-section {
    background: var(--surface);
    border: 1px solid var(--surface-border);
    border-radius: var(--radius-xl);
    padding: var(--spacing-2xl);
    margin-bottom: var(--spacing-xl);
    position: relative;
    backdrop-filter: blur(20px);
    box-shadow: var(--shadow-md);
  }

  .search-section::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background: var(--gradient-glow);
    border-radius: var(--radius-xl);
    opacity: 0.1;
    z-index: -1;
  }

  .search-title {
    font-size: clamp(1.25rem, 3vw, 1.75rem);
    font-weight: 700;
    margin-bottom: var(--spacing-2xl);
    text-align: center;
    color: var(--text-primary);
    background: var(--gradient-primary);
    -webkit-background-clip: text;
    background-clip: text;
    -webkit-text-fill-color: transparent;
  }

  .form-row {
    margin-bottom: var(--spacing-lg);
  }

  label {
    display: block;
    margin-bottom: var(--spacing-sm);
    font-weight: 600;
    font-size: 0.9375rem;
    color: var(--text-primary);
  }

  .input-hint {
    display: block;
    font-size: 0.8125rem;
    color: var(--text-tertiary);
    margin-top: var(--spacing-xs);
    line-height: 1.4;
  }

  .input-hint.auto-selected {
    color: var(--primary);
    font-weight: 500;
  }

  .input-hint.auto-selected::before {
    content: "âœ“ ";
    font-weight: bold;
  }

  /* Modern Input Styling */
  input[type="text"] {
    width: 100%;
    padding: var(--spacing-md) var(--spacing-lg);
    background: var(--bg-secondary);
    border: 2px solid var(--surface-border);
    border-radius: var(--radius-md);
    color: var(--text-primary);
    font-size: 1rem;
    font-weight: 400;
    transition: all 0.2s cubic-bezier(0.4, 0, 0.2, 1);
    box-sizing: border-box;
    font-family: inherit;
  }

  input[type="text"]:focus {
    border-color: var(--primary);
    box-shadow: 0 0 0 3px rgba(255, 107, 53, 0.1);
    outline: none;
    background: var(--bg-tertiary);
  }

  input[type="text"]::placeholder {
    color: var(--text-muted);
  }

  /* Modern Button Design */
  button {
    width: 100%;
    padding: var(--spacing-lg) var(--spacing-xl);
    background: var(--gradient-secondary);
    color: white;
    border: none;
    border-radius: var(--radius-md);
    font-size: 1.0625rem;
    font-weight: 600;
    cursor: pointer;
    display: flex;
    align-items: center;
    justify-content: center;
    gap: var(--spacing-sm);
    transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
    position: relative;
    overflow: hidden;
    font-family: inherit;
    box-shadow: var(--shadow-sm);
  }

  button::before {
    content: '';
    position: absolute;
    top: 0;
    left: -100%;
    width: 100%;
    height: 100%;
    background: linear-gradient(90deg, transparent, rgba(255, 255, 255, 0.2), transparent);
    transition: left 0.5s ease;
  }

  button:hover {
    transform: translateY(-2px);
    box-shadow: var(--shadow-lg);
    filter: brightness(1.1);
  }

  button:hover::before {
    left: 100%;
  }

  button:active {
    transform: translateY(0);
    transition: transform 0.1s ease;
  }

  button:disabled {
    opacity: 0.7;
    cursor: not-allowed;
    transform: none;
  }

  /* Search Container and Results */
  .search-container {
    position: relative;
    width: 100%;
  }

  .search-results {
    position: absolute;
    width: 100%;
    max-height: 280px;
    overflow-y: auto;
    background: var(--surface);
    border: 2px solid var(--surface-border);
    border-radius: var(--radius-md);
    z-index: 1000;
    display: none;
    box-shadow: var(--shadow-lg);
    top: calc(100% + var(--spacing-xs));
    left: 0;
    backdrop-filter: blur(20px);
  }

  .search-results.show-above {
    top: auto;
    bottom: calc(100% + var(--spacing-xs));
  }

  .search-results.active {
    display: block;
    animation: slideIn 0.2s ease-out;
  }

  @keyframes slideIn {
    from {
      opacity: 0;
      transform: translateY(-8px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  .search-item {
    padding: var(--spacing-md) var(--spacing-lg);
    cursor: pointer;
    border-bottom: 1px solid var(--surface-border);
    transition: all 0.2s ease;
  }

  .search-item:last-child {
    border-bottom: none;
  }

  .search-item:hover,
  .search-item.selected {
    background: var(--surface-hover);
  }

  .search-item .event-name {
    font-weight: 600;
    color: var(--primary);
    margin-bottom: var(--spacing-xs);
    font-size: 0.9375rem;
  }

  .search-item .event-details {
    font-size: 0.875rem;
    color: var(--text-secondary);
    margin-bottom: 2px;
  }

  .search-item .event-key {
    font-size: 0.8125rem;
    color: var(--text-tertiary);
    font-family: 'Monaco', 'Menlo', 'Ubuntu Mono', monospace;
  }

  /* Loading Animation */
  .loading-bars {
    display: inline-flex;
    align-items: center;
    gap: 3px;
    height: 20px;
  }

  .loading-bars .bar {
    width: 3px;
    height: 12px;
    background: white;
    border-radius: 2px;
    animation: loadingBarPulse 1.2s infinite ease-in-out;
  }

  .loading-bars .bar:nth-child(1) { animation-delay: 0s; }
  .loading-bars .bar:nth-child(2) { animation-delay: 0.1s; }
  .loading-bars .bar:nth-child(3) { animation-delay: 0.2s; }

  @keyframes loadingBarPulse {
    0%, 40%, 100% { 
      opacity: 0.4; 
      transform: scaleY(0.6);
    }
    20% { 
      opacity: 1; 
      transform: scaleY(1);
    }
  }

  /* Modern Footer */
  .footer {
    background: var(--surface);
    border-top: 1px solid var(--surface-border);
    padding: var(--spacing-2xl) 0 var(--spacing-xl);
    text-align: center;
    margin-top: auto;
    position: relative;
  }

  .footer::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    height: 1px;
    background: var(--gradient-primary);
    opacity: 0.5;
  }

  .footer-logo {
    max-width: 200px;
    height: auto;
    margin-bottom: var(--spacing-md);
    filter: drop-shadow(var(--shadow-sm));
  }

  .footer-subtitle {
    color: var(--primary);
    font-size: 1rem;
    font-weight: 500;
    margin-bottom: var(--spacing-sm);
  }

  .footer-info {
    color: var(--text-secondary);
    font-size: 0.875rem;
    margin-bottom: var(--spacing-md);
  }

  .footer-copyright {
    color: var(--text-tertiary);
    font-size: 0.8125rem;
  }

  .footer-copyright a {
    color: var(--primary);
    text-decoration: none;
    font-weight: 500;
    transition: all 0.2s ease;
    padding: 2px 4px;
    border-radius: 4px;
  }

  .footer-copyright a:hover {
    background: rgba(255, 107, 53, 0.1);
    color: var(--primary-light);
  }

  /* Donate Section - Modern Design */
  .donate-section {
    width: 100%;
    display: flex;
    justify-content: center;
    align-items: center;
    margin: var(--spacing-2xl) 0;
    padding: 0;
  }

  .donate-card {
    background: var(--surface);
    border: 1px solid var(--surface-border);
    border-radius: var(--radius-lg);
    box-shadow: var(--shadow-md);
    padding: var(--spacing-2xl);
    max-width: 480px;
    width: 100%;
    text-align: center;
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: var(--spacing-lg);
    position: relative;
    overflow: hidden;
  }

  .donate-card::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background: var(--gradient-glow);
    opacity: 0.05;
    z-index: -1;
  }

  .donate-title {
    display: flex;
    align-items: center;
    font-size: 1.375rem;
    font-weight: 700;
    color: var(--accent);
    margin: 0;
    letter-spacing: -0.01em;
  }

  .donate-desc {
    color: var(--text-secondary);
    font-size: 1rem;
    line-height: 1.6;
    margin: 0;
  }

  .donate-btn {
    display: inline-flex;
    align-items: center;
    justify-content: center;
    background: var(--gradient-secondary);
    color: white;
    font-weight: 600;
    font-size: 1rem;
    border: none;
    border-radius: var(--radius-md);
    padding: var(--spacing-md) var(--spacing-xl);
    text-decoration: none;
    box-shadow: var(--shadow-sm);
    transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
    gap: var(--spacing-sm);
    position: relative;
    overflow: hidden;
  }

  .donate-btn::before {
    content: '';
    position: absolute;
    top: 0;
    left: -100%;
    width: 100%;
    height: 100%;
    background: linear-gradient(90deg, transparent, rgba(255, 255, 255, 0.2), transparent);
    transition: left 0.5s ease;
  }

  .donate-btn:hover {
    transform: translateY(-2px) scale(1.02);
    box-shadow: var(--shadow-lg);
    text-decoration: none;
    color: white;
  }

  .donate-btn:hover::before {
    left: 100%;
  }

  /* Responsive Design */
  @media (max-width: 768px) {
    .container {
      padding: 0 var(--spacing-md);
    }

    .hero {
      padding: var(--spacing-2xl) 0;
    }

    .search-section {
      padding: var(--spacing-xl);
    }

    .donate-card {
      padding: var(--spacing-xl);
      margin: 0 var(--spacing-md);
    }
  }

  @media (max-width: 480px) {
    .hero-logo {
      max-width: 240px;
    }

    .features {
      gap: var(--spacing-md);
    }

    .feature-card {
      padding: var(--spacing-lg);
    }

    .search-section {
      padding: var(--spacing-lg);
    }

    .donate-card {
      padding: var(--spacing-lg);
    }
  }

  /* High contrast mode support */
  @media (prefers-contrast: high) {
    :root {
      --surface-border: #555555;
      --text-secondary: #cccccc;
      --text-tertiary: #aaaaaa;
    }
  }

  /* Reduced motion support */
  @media (prefers-reduced-motion: reduce) {
    *,
    *::before,
    *::after {
      animation-duration: 0.01ms !important;
      animation-iteration-count: 1 !important;
      transition-duration: 0.01ms !important;
      scroll-behavior: auto !important;
    }
  }

  /* Focus visible improvements */
  button:focus-visible,
  input:focus-visible,
  a:focus-visible {
    outline: 2px solid var(--primary);
    outline-offset: 2px;
  }
</style>
